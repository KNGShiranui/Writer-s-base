<h1>ポイント送信</h1>

<%= form_with url: points_path, method: :post, local: true do |f| %>
  <div>
    <%= f.label :receiver_id, "送信先ユーザー" %>
    <%= f.select :receiver_id, @users.map { |u| [u.name, u.id] } %>
  </div>
  <div>
    <%= f.label :amount, "送信ポイント" %>
    <%= f.number_field :amount, min: 1 %>
  </div>
  <%= f.submit "ポイントを送信" %>
<% end %>
