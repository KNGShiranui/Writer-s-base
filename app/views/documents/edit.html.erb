<div class="repository-form-container">
  <h1><i class="fas fa-edit"></i>&nbsp;<%= t('documents.editing_document') %></h1>
  <%= render 'form', document: @document, repository_id: params[:repository_id], branch_id: params[:branch_id] %>
  <%= link_to ('<i class="fas fa-eye"></i>' + t('common.show')).html_safe, document_path(@document, repository_id: @repository.id, branch_id: @branch.id) %> |
  <%= link_to ('<i class="fas fa-arrow-left"></i>' + t('common.back')).html_safe, documents_path(@document, repository_id: @repository.id, branch_id: @branch.id) %>
</div>