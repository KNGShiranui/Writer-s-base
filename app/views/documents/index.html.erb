<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>User</th>
      <th>Branch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= truncate_html(simple_format(document.content), length: 100) %>
          <% if document.content.size >= 100 %>
            <%= link_to document do %>続きを読む<% end %>
          <% end %>
        </td>
        <td><%= document.user_id %></td>
        <td><%= document.branch_id %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document, branch_id: @branch, repository_id: @repository) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @documents %>
<%= link_to 'New Document', new_document_path(branch_id: @branch, repository_id: @repository) %>

