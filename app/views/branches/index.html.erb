<h1>Branches</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Repository</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @branches.each do |branch| %>
      <tr>
        <td><%= branch.name %></td>
        <td><%= branch.repository_id %></td>
        <td><%= link_to 'Show', branch_path(branch) %></td>
        <td><%= link_to 'Edit', edit_branch_path(branch) %></td>
        <td><%= link_to 'Destroy', branch_path(branch, repository_id: @repository), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @branches %>
<%= link_to 'New Branch', new_branch_path(repository_id: @repository) %>
