<% if @branch.present? %>
  <div class="table-container">
  <h2><%= t('branches.branch') %></h2>
    <table class="info-table">
      <tr>
        <th><%= t('branches.name') %>: </th>
        <td><%= @branch.name %></td>
      </tr>
      <tr>
        <th><%= t('branches.repository') %>: </th>
        <td><%= @branch.repository.name %></td>
      </tr>
    </table>
    <%= button_to create_from_existing_branch_path(@branch, repository_id: @repository.id, user_id: current_user.id), method: :post, class: "btn btn-primary" do %>
      <i class="fas fa-code-branch"></i> <%= t('branches.copy_branch') %>:
    <% end %>


    <%= link_to ('<i class="fas fa-eye"></i>' + t('common.show')).html_safe, branch_path(@branch, repository_id: @branch.repository.id), class: "btn btn-secondary" %> |
    <%= link_to ('<i class="fas fa-edit"></i>' + t('common.edit')).html_safe, edit_branch_path(@branch, repository_id: @repository) %> |
    <%= link_to ('<i class="fas fa-arrow-left"></i>' + t('common.back')).html_safe, repository_path(@repository), class: "btn btn-secondary" %> |
    <%= link_to ('<i class="fas fa-code-branch"></i>' + t('branches.branches')).html_safe, branches_path(repository_id: @branch.repository.id), class: "btn btn-secondary" %> |
    <%= link_to ('<i class="fas fa-file-alt"></i>' + t('documents.documents')).html_safe, documents_path(branch_id: @branch.id, repository_id: @branch.repository.id), class: "btn btn-secondary" %> |

  <% elsif @new_branch.present? %>
    <table class="info-table">
      <tr>
        <th><%= t('branches.name') %>: </th>
        <td><%= @new_branch.name %></td>
      </tr>
      <tr>
        <th><%= t('branches.repository') %>: </th>
        <td><%= @new_branch.repository_id %></td>
      </tr>
    </table>
  </div >
<% end %>
