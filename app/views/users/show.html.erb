<p> <strong>Name:</strong> <%= current_user.name %> </p>
<p> <strong>Email:</strong> <%= current_user.email %> </p>
<p> <strong>Content:</strong> <%= current_user.content %> </p>
<p> <strong>Icon:</strong> <%= current_user.icon %> </p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repositories.each do |repository| %>
      <tr>
        <td><%= repository.name %></td>
        <td><%= repository.description %></td>
        <td><%= repository.user_id %></td>
        <td><%= link_to 'Show', repository %></td>
        <td><%= link_to 'Edit', edit_repository_path(repository) %></td>
        <td><%= link_to 'Destroy', repository, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

