<%= form_with(model: commit) do |form| %>
  <% if commit.errors.any? %>
    <div id="error_explanation">
      <h2><%= t("helpers.pluralize.other", count: commit.errors.count) %></h2>
      <ul>
        <% commit.errors.each do |error| %>
          <ul><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :message %>
    <%= form.text_field :message %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
