<h2><%= t('.title', resource: resource_name.to_s.humanize) %></h2>

<%# Add class to the form element %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'update-account-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_field :content, autofocus: true, autocomplete: "content" %>
  </div>

  <div class="field">
    <%= f.label :icon %><br />
    <%= f.text_field :icon, autofocus: true, autocomplete: "icon" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.update') %>
  </div>
<% end %>

<%# Wrap cancel account section in a div with the class "cancel-account" %>
<div class="cancel-account">
  <h3><%= t('.cancel_my_account') %></h3>
  <div><%= t('.unhappy') %> <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure'), turbo_confirm: t('.are_you_sure') }, method: :delete %></div>
</div>

<%# Add class to the back link %>
<div class="back-link">
  <%= link_to t('devise.shared.links.back'), :back %>
</div>
