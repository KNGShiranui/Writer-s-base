<div style="width: 600px; margin-left: auto; margin-right: auto; background-color: #f9f9f9; border: 1px solid #e8e8e8; border-radius: 5px; padding: 20px;">
  <h2 class="form-title"><%= t('.sign_up') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'auth-form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, t('common.user name') %><br />
      <%= f.text_field :name, autocomplete: "name", placeholder: t('common.user name') %>
    </div>

    <div class="field">
      <%= f.label :email, t('common.Email') %><br />
      <%= f.email_field :email, autocomplete: "email", placeholder: t('common.Email')  %>
    </div>

    <div class="field">
      <%= f.label :content, t('common.Content') %><br />
      <%= f.text_field :content, autocomplete: "content", placeholder: t('common.Content') %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: t('common.password') %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t('common.password confirmation') %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit t('.sign_up') %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>