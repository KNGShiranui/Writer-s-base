<h1>Repositories</h1>
<%= render 'search', q: @q, url: repositories_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repositories.each do |repository| %>
      <% if current_user.present? == true %>
        <% if !repository.status_closed? || repository.user_id == current_user.id %>
          <%# unless repository.status_closed? && repository.user_id != current_user.id %>
          <tr>
            <td><%= repository.name %></td>
            <td><%= repository.description %></td>
            <td><%= repository.status %></td>
            <td><%= repository.priority %></td>
            <td><%= repository.user_id %></td>
            <td><%= link_to 'Show', repository %></td>
            <% if current_user.present? %>
              <% if repository.user_id == current_user.id %>
                <td><%= link_to 'Edit', edit_repository_path(repository) %></td>
                <td><%= link_to 'Destroy', repository, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            <% else %>
            <% end %>
            <% if current_user.favorited_repositories.include?(repository) %>
              <td><%= link_to 'お気に入り解除', favorite_repository_path(repository, repository_id: repository.id), method: :delete %></td>
            <% else %>
              <td><%= link_to 'お気に入り追加', favorite_repositories_path(repository, repository_id: repository.id), method: :post %></td>
            <% end %>
          </tr>
        <% end %>
      <% elsif current_user.present? == false %>
        <% if !repository.status_closed? %>
          <tr>
            <td><%= repository.name %></td>
            <td><%= repository.description %></td>
            <td><%= repository.status %></td>
            <td><%= repository.priority %></td>
            <td><%= repository.user_id %></td>
            <td><%= link_to 'Show', repository %></td>
          </tr>
        <% end %>          
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @repositories %>
<%= link_to 'New Repository', new_repository_path %>



